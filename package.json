{
  "name": "trace-context",
  "version": "1.0.0",
  "description": "Parser / serializer for the formats defined in the W3C TraceContext specification",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && tsc --outDir dist -p .",
    "test": "jest --coverage --coverageDirectory coverage",
    "test:watch": "jest --coverage --coverageDirectory coverage --watch lib"
  },
  "files": [
    "lib",
    "dist"
  ],
  "author": "Ben Ripkens",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.115",
    "jest": "^23.4.2",
    "lodash": "^4.17.10",
    "ts-jest": "^23.0.1",
    "typescript": "^3.0.1"
  },
  "jest": {
    "testURL": "http://localhost",
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
